<%= form_with model: @history, url: admin_finalist_path(@history.id), method: :patch, local: true do |form| %>
  <div class="row">
    <div class="col-md-4">
      <%= form.label :year do %>
        <h3>開催年</h3>
      <% end %>
      <%= form.text_field :year, class: "form-control" %>
      <h3>年</h3>
    </div>
    <div class="col-md-8">
      <% n = 1 %>
      <%= form.fields_for :comedians do |comedian| %>
        <h3><%= "#{n}組目" %></h3>
        <%= comedian.text_field :name, class: "form-control" %>
        <% n += 1 %>
      <% end %>
    </div>
  </div>
  <div><%= form.submit "変更を保存する" %></div>
<% end %>