<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto text-center">
      <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        <%= form_with model: @history, url: admin_finalist_path(@history.id), method: :patch, local: true do |f| %>
          <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
              <%= link_to admin_finalist_path(@history), class: 'btn btn-link' do %>
                <h5>キャンセル</h5>
              <% end %>
              <h4 class="align-self-center">投稿を編集</h4>
              <%= f.submit "変更を保存", class: 'btn btn-dark rounded-pill' %>
            </div>
          </div>
          <div class="card-body">
            <%= render 'public/judges/error_message', hoge: @history %>
            <div class="row">
              <div class="col-md-4 text-right">
                <h4><%= f.label :year, "開催年" %></h4>
              </div>
              <div class="col-md-5 mx-auto">
                <div class="d-flex">
                  <%= f.text_field :year, class: "form-control", style: "width: 150px;" %>
                  <h4>年</h4>
                </div>
              </div>
            </div>
            <div class="row mt-3">
              <div class="col-md-8 mx-auto">
                <% n = 1 %>
                <%= f.fields_for :comedians do |comedian| %>
                  <div class="d-flex">
                    <h3><%= "#{n}組目 :" %></h3>
                    <div class="ml-3">
                      <%= comedian.text_field :name, class: "form-control", style: "width: 300px;" %>
                    </div>
                    <% n += 1 %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


  
  
