<div class="container mt-5">
  <div class="row">
    <div class="col-md-7 mx-auto text-center">
      <h1>History</h1>
      <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        <div class="card-header">
          <%= link_to new_admin_finalist_path do %>
            <div class="text-right">
              <h5>ファイナリストを追加<i class="fas fa-chevron-circle-right"></i></h5>
            </div>
          <% end %>
        </div>
        <div class="card-body">
          <% @histories.each_slice(3) do |histories| %>
            <div class="row">
              <% histories.each do |history| %>
                <div class="col">
                  <span><%= link_to "#{history.year}年", admin_finalist_path(history) , class: "btn btn-secondary mt-4", style: "width: 100px" %></span>
                </div>          
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>