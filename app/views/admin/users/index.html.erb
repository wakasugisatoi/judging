<div class="container mt-5">
  <div class="row">
    <div class="col-md-7 mx-auto text-center">
      <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        <div class="card-header">
          <h2>ユーザー一覧</h2>
        </div>
        <div class="card-body">
          <% @users.each do |user| %>
            <div class="row mt-1">
              <div class="col-md-5 text-left ml-5">
                <%= link_to admin_user_path(user.id) do %>
                  <%= image_tag user.get_image %>
                  <%= user.name %>
                <% end %>
              </div>
              <div class="col-md-5 text-right mr-5">
                <% if user.is_active == false %>
                  <span class="text-danger font-weight-bold">利用停止</span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


  
    
      
      
   
    
      
      
    
    
  
