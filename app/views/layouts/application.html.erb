<!DOCTYPE html>
<html>
  <head>
    <title>Judging</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <script src="https://kit.fontawesome.com/1a3f0d96a2.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!--フォント-->
    <link href="https://fonts.googleapis.com/css2?family=M+PLUS+1p:wght@100&family=Zen+Maru+Gothic:wght@500&display=swap" rel="stylesheet">
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">logo</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li><%= link_to root_path do %><i class="fa-solid fa-house">ホーム</i><% end %></li>
                <li><%= link_to new_judge_path do %>審査投稿<% end %></li>
                <li><%= link_to histories_path do %><i class="fa-solid fa-microphone-lines"></i>ファイナリスト<% end %></li>
                <li><%= link_to mypage_user_path(current_user) do %><i class="fa-solid fa-circle-user"></i>マイページ<% end %></li> 
                <li><%= link_to destroy_user_session_path, method: :delete do %><i class="fa-solid fa-right-from-bracket"></i>ログアウト<% end %></li>
              <% elsif admin_signed_in? %>
                <li><%= link_to admin_homes_top_path do %>ファイナリスト<% end %></li>
                <li><%= link_to admin_users_path do %>ユーザー管理<% end %></li>
                <li><%= link_to admin_judges_path do %>投稿管理<% end %></li>
                <li><%= link_to destroy_admin_session_path, method: :delete do %>ログアウト<% end %></li>
              <% else %>
                <li><%= link_to root_path do %><i class="fa-solid fa-house">ホーム</i><% end %></li>
                <li><%= link_to histories_path do %><i class="fa-solid fa-microphone-lines">ファイナリスト</i><% end %></li>
                <li><%= link_to new_user_registration_path do %><i class="fa-solid fa-user-plus">新規登録</i><% end %></li>
                <li><%= link_to new_user_session_path do %><i class="fa-solid fa-right-to-bracket">ログイン</i><% end %></li>
                <li><%= link_to users_guest_guest_sign_in_path, method: :post do %>ゲストログイン<% end %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <% if flash[:notice] %>
        <p class="flash-message notice"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:alert] %>
        <p class="flash-message alert"><%= flash[:alert] %></p>
      <% end %>
      
      <%= yield %>
    </main>
    <footer></footer>
  </body>
</html>
