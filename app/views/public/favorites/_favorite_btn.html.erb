<% if user_signed_in? %> 
  <% if judge.favorited_by?(current_user) %>
    <%= link_to judge_favorites_path(judge), method: :delete, remote: true do %>
      <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= judge.favorites.count %> 
    <% end %>
  <% else %>
    <%= link_to judge_favorites_path(judge), method: :post, remote: true do %>
      <i class="fa-regular fa-heart" aria-hidden="true"></i>
      <%= judge.favorites.count %> 
    <% end %>
  <% end %>
<% else %>
  <%= link_to new_user_session_path do %>
    <i class="fa-regular fa-heart" aria-hidden="true"></i>
    <%= judge.favorites.count %> 
  <% end %>
<% end %>