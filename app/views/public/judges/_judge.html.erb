<div class="card" style="width: 100%;">
  <div class="row">
    <div class="col-md-6 text-left ml-2 mt-2">
      <%= link_to mypage_user_path(judge.user.id) do %>
        <%= image_tag judge.user.get_image %>
        <%= judge.user.name %>
      <% end %><br>
      <div class="ml-5"> 
        <%= link_to judge_path(judge.id) do %>
          <%= judge.history.year %> 年
          <i class="fa-solid fa-angles-right"></i>
          <%= judge.comedian.name %>
        <% end %>
      </div>
    </div>
    <div class="col-md-5 text-right mr-2 mt-2">
      <%= link_to judge_path(judge) do %>
        <h1><%= judge.point %> 点</h1>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 mx-auto text-left">
      <%= judge.impression %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-end mr-5">
        <div id="favorite_btn_<%= judge.id %>">
          <%= render 'public/favorites/favorite_btn', judge: judge %>
        </div>
        <div id="comment_counter" class="ml-3 text-right">
          <%= link_to judge_path(judge) do %>
            <%= render 'public/judge_comments/counter', judge: judge %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
