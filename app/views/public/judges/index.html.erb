<div class="container mt-5">
  <div class="row">
    <div class="col-md-7  mx-auto">
      <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        <div class="card-header text-center">
          <h3>新着の投稿</h3>
        </div>
        <div class="card-body">
          <% if @judges.any? %>
          <% @judges.each do |judge| %>
            <%= render 'public/judges/judge', judge: judge %>
          <% end %>
        <% else %>
          <p>投稿はありません。</p>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
