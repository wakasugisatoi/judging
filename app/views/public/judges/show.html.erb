<%= link_to comedian_judge_path(@judge.comedian) do %>
  <h1><i class="fa-solid fa-angle-left"></i></h1>
<% end %>
<h1>詳細</h1>
<div>
  <%= link_to mypage_user_path(@judge.user.id) do %>
    <%= image_tag @judge.user.get_image %>
    <%= @judge.user.name %>
  <% end %>
  <%= @judge.history.year %> >>
  <%= @judge.comedian.name %>
  <h3><%= @judge.point %>点</h3>
  <%= @judge.impression %>
</div>
<div id="favorite_btn_<%= @judge.id %>">
  <%= render 'public/favorites/favorite_btn', judge: @judge %>
</div>
<div id="comment_counter">
  <%= render 'public/judge_comments/counter', judge: @judge %>
</div>
<% if user_signed_in? && current_user == @judge.user %>
  <%= link_to edit_judge_path(@judge.id), class: "btn btn-secondary" do %>編集<% end %>
  <%= link_to "削除", judge_path(@judge.id), data: { confirm: "本当に削除しますか？" }, method: :delete, class: "btn btn-secondary" %>
<% end %>

<div id="comment_index">
  <%= render 'public/judge_comments/index', judge: @judge %>
</div>

<%= render 'public/judge_comments/form', judge: @judge, judge_comment: @judge_comment %>