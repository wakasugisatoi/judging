<div class="container mt-5">
  <div class="row">
    <div class="col-md-7 mx-auto">
      <div class="card shadow-lg p-3 mb-5 bg-body-tertiary rounded">
        <div class="card-header text-center">
          <h2>ログイン</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: user_session_path do |f| %>
            <div class="field text-center">
              <%= f.label :メールアドレス, class:"mr-3" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          
            <div class="field text-center">
              <%= f.label :パスワード, class:"mr-5" %>
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
          
            <% if devise_mapping.rememberable? %>
              <div class="field text-center">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          
            <div class="actions text-center mt-3">
              <%= f.submit "Log in", class: 'btn btn-dark rounded-pill' %>
            </div>
          <% end %>
          
          <%= render "public/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>



